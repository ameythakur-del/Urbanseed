<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/edit_name"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="bottom"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:src="@drawable/posts"
                android:background="@drawable/round_outline"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:id="@+id/item_image"/>

        <TextView
            android:id="@+id/dialog_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/metrophobic"
            android:hint="Title"
            android:paddingLeft="10dp"
            android:textColor="#000000"
            android:textSize="30dp" />

        <TextView
            android:paddingLeft="10dp"
            android:fontFamily="@font/metrophobic"
            android:id="@+id/dialog_discription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Characteristic taste" />

            <View
                            android:layout_marginTop="8.5dp"
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:background="#c0c0c0"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/metrophobic"
                android:hint="Title"
                android:text="Select the Quantity"
                android:paddingLeft="10dp"
                android:textColor="#000000"
                android:textSize="25dp" />
            <TextView
                android:paddingLeft="10dp"
                android:fontFamily="@font/metrophobic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="You can select only one item" />

            <androidx.recyclerview.widget.RecyclerView
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/recycler"/>

            <TextView
                android:textSize="20dp"
                android:layout_margin="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/dialog_delivery"/>

            <LinearLayout
                android:layout_margin="10dp"
                android:gravity="bottom"
                android:layout_gravity="bottom"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="3">

                <com.mondkars.saatwik.HorizontalNumberPicker
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/number_dialog"
                    android:layout_weight="1"/>


                <LinearLayout
                    android:layout_weight="2"
                    android:id="@+id/dialog_cart"
                    android:layout_width="200dp"
                    android:padding="10dp"
                    android:layout_height="45dp"
                    android:background="@drawable/bg"
                    android:clickable="true"
                    android:gravity="center"
                    android:textAllCaps="false">

                    <TextView
                        android:id="@+id/dialog_items"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Add to cart"
                        android:textColor="#FFFFFF"
                        android:textSize="20dp" />

                </LinearLayout>



                
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
