<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.mondkars.saatwik">

    <uses-permission android:name="android.permission.EXPAND_STATUS_BAR" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_PHONE_NUMBERS" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:roundIcon="@drawable/icon"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:replace="android:icon">
        <activity android:name=".MyMoney"
            android:theme="@style/MyMoney">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.mondkars.saatwik.MyMoney" />
        </activity>
        <activity
            android:name=".OTPActivity"
            android:theme="@style/OTPActivity" />
        <activity
            android:name=".Update"
            android:theme="@style/UpdateActivity" />
        <activity
            android:name=".TrackActivity"
            android:theme="@style/TrackActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.mondkars.saatwik.TrackActivity" />
        </activity>
        <activity
            android:name=".ConfirmActivity"
            android:theme="@style/ConfirmActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.mondkars.saatwik.ConfirmActivity" />
        </activity>
        <activity
            android:name=".CouponActivity"
            android:theme="@style/CouponActivity"
            android:windowSoftInputMode="stateAlwaysHidden">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.mondkars.saatwik.CouponActivity" />
        </activity>
        <activity
            android:name=".ChangeAddress"
            android:theme="@style/ChangeAddress">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.mondkars.saatwik.ChangeAddress" />
        </activity>
        <activity
            android:name=".AboutUsFragment"
            android:theme="@style/ColorTheme3">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.mondkars.saatwik.AboutUsFragment" />
        </activity>
        <activity
            android:name=".ContactUs"
            android:theme="@style/ColorTheme4">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.mondkars.saatwik.ContactUs" />
        </activity>
        <activity
            android:name=".GalleryFragment"
            android:theme="@style/ColorTheme5">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.mondkars.saatwik.GalleryFragment" />
        </activity>
        <activity
            android:name=".MyCart"
            android:theme="@style/ColorTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.mondkars.saatwik.MyCart" />
        </activity>
        <activity
            android:name=".wishlist"
            android:theme="@style/ColorTheme2">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.mondkars.saatwik.wishlist" />
        </activity>
        <activity
            android:name=".Activity2"
            android:theme="@style/Activity2" />
        <activity
            android:name=".UserDetailsActivity"
            android:theme="@style/ActivityUserDetails" />
        <activity
            android:name=".Main2Activity"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="stateAlwaysHidden" />
        <activity
            android:name=".MainActivity"
            android:theme="@style/mainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>